
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject Microsoft.Extensions.Logging.ILogger<PrinterUiIframes> Logger

@code {

    private string? mainsailUrl;
    private string? fluiddUrl;
    private string? remoteMainsailUrl;
    private string? remoteFluiddUrl;
    private string selectedUi = "mainsail";
    // Console is now the root route. Show console when the relative path is empty (root)
    // or when it explicitly contains 'console' (for compatibility).
    private bool showConsole => string.IsNullOrEmpty(Nav.ToBaseRelativePath(Nav.Uri)) || Nav.ToBaseRelativePath(Nav.Uri).StartsWith("console");
    
    // Determine if we should render the iframe at all
    private bool shouldRender
    {
        get
        {
            var path = Nav.ToBaseRelativePath(Nav.Uri).ToLowerInvariant();
            // Don't render iframes on streaming, timelapses, audio, or config pages
            return !path.StartsWith("streaming") && !path.StartsWith("timelapses") 
                && !path.StartsWith("audio") && !path.StartsWith("config");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadConfig();
        // Restore last selection from localStorage if available
        try
        {
            var saved = await JS.InvokeAsync<string>("localStorage.getItem", "printerUi.selected");
            if (!string.IsNullOrWhiteSpace(saved) && (saved == "mainsail" || saved == "fluidd"))
            {
                selectedUi = saved;
            }
        }
        catch { }
        Nav.LocationChanged += Nav_LocationChanged;
    }

    private void Nav_LocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    private async Task LoadConfig()
    {
        try
        {
            using var client = new HttpClient { BaseAddress = new Uri(Nav.BaseUri) };
            var cfg = await client.GetFromJsonAsync<ConfigResponse>("api/config");
            if (cfg?.PrinterUI != null)
            {
                // Prefer direct remote UI URLs for iframe drop-ins. Leave proxy endpoints in place for compatibility,
                // but note they may not be functional â€” the UI will use the remote URL when available.
                remoteMainsailUrl = cfg.PrinterUI.MainsailUrl;
                remoteFluiddUrl = cfg.PrinterUI.FluiddUrl;

                // Use the configured remote UI endpoints for iframe drop-ins when available.
                // Fallback to local proxy endpoints if a remote URL is not configured. Proxy endpoints are
                // intentionally left in the codebase but may not be functional in some deployments.
                mainsailUrl = !string.IsNullOrWhiteSpace(remoteMainsailUrl) ? remoteMainsailUrl : "/proxy/mainsail/";
                fluiddUrl = !string.IsNullOrWhiteSpace(remoteFluiddUrl) ? remoteFluiddUrl : "/proxy/fluidd/";

                // Pick a sensible default based on what's configured
                if (string.IsNullOrWhiteSpace(mainsailUrl) && !string.IsNullOrWhiteSpace(fluiddUrl))
                {
                    selectedUi = "fluidd";
                }
                else if (!string.IsNullOrWhiteSpace(mainsailUrl) && string.IsNullOrWhiteSpace(fluiddUrl))
                {
                    selectedUi = "mainsail";
                }
            }
        }
        catch { }
    }

    private string GetIframeStyle(string which)
    {
        var baseStyle = "position: absolute; inset: 0; width: 100%; height: 100%; background: #000; border: 1px solid #333; border-radius: 8px;";
        if (!showConsole)
        {
            return baseStyle + " opacity: 0; pointer-events: none; z-index: 0;";
        }
        
            if (selectedUi == which)
        {
            var result = baseStyle + " opacity: 1; z-index: 1;";
            Logger?.LogInformation("[PrinterUiIframes] GetIframeStyle('{Which}') with selectedUi='{SelectedUi}' => visible", which, selectedUi);
            return result;
        }
        else
        {
            var result = baseStyle + " opacity: 0; pointer-events: none; z-index: 0;";
            Logger?.LogInformation("[PrinterUiIframes] GetIframeStyle('{Which}') with selectedUi='{SelectedUi}' => hidden", which, selectedUi);
            return result;
        }
    }

    private async Task OnSelectedChanged(string value)
    {
        Logger?.LogInformation("[PrinterUiIframes] *** RADIO CLICKED *** Switching from '{From}' to '{To}'", selectedUi, value);
        selectedUi = value;
        try { await JS.InvokeVoidAsync("localStorage.setItem", "printerUi.selected", value); } catch { }
        Logger?.LogInformation("[PrinterUiIframes] *** AFTER UPDATE *** selectedUi = '{Selected}'", selectedUi);
        await InvokeAsync(StateHasChanged);
        Logger?.LogInformation("[PrinterUiIframes] *** AFTER StateHasChanged ***");
    }

    private class ConfigResponse
    {
        public PrinterUIConfig? PrinterUI { get; set; }
    }
    private class PrinterUIConfig
    {
        public string? MainsailUrl { get; set; }
        public string? FluiddUrl { get; set; }
    }
}

<div style="display:@(showConsole && shouldRender ? "block" : "none");height:calc(100vh - 220px);">
    <div class="section" style="margin-bottom:10px;">
        <span style="font-size: 1.1em;">
            @if (!string.IsNullOrWhiteSpace(mainsailUrl))
            {
                <a href="javascript:void(0)" title='@(mainsailUrl.StartsWith("/proxy") ? (mainsailUrl + " (proxy - may not work)") : mainsailUrl)' @onclick='() => OnSelectedChanged("mainsail")' style='color: @(selectedUi == "mainsail" ? "lime" : "#66ccff"); text-decoration: none; font-weight: @(selectedUi == "mainsail" ? "bold" : "normal"); margin-right: 16px;'>Mainsail</a>
            }
            @if (!string.IsNullOrWhiteSpace(fluiddUrl))
            {
                <a href="javascript:void(0)" title='@(fluiddUrl.StartsWith("/proxy") ? (fluiddUrl + " (proxy - may not work)") : fluiddUrl)' @onclick='() => OnSelectedChanged("fluidd")' style='color: @(selectedUi == "fluidd" ? "orange" : "#66ccff"); text-decoration: none; font-weight: @(selectedUi == "fluidd" ? "bold" : "normal");'>Fluidd</a>
            }
        </span>
    </div>
    <div class="section console-container" style="height:100%;">
        @if (string.IsNullOrWhiteSpace(mainsailUrl) && string.IsNullOrWhiteSpace(fluiddUrl))
        {
            <p>Loading...</p>
        }
        else
        {
            <div class="iframe-stack" @key="selectedUi">
                @if (!string.IsNullOrWhiteSpace(mainsailUrl))
                {
                    <iframe src="@mainsailUrl" style='@GetIframeStyle("mainsail")' title="Mainsail Console"></iframe>
                }
                @if (!string.IsNullOrWhiteSpace(fluiddUrl))
                {
                    <iframe src="@fluiddUrl" style='@GetIframeStyle("fluidd")' title="Fluidd Console"></iframe>
                }
            </div>
        }
    </div>
</div>

<style>
    .iframe-stack {
        position: relative;
        width: 100%;
        height: 100%;
    }
</style>
